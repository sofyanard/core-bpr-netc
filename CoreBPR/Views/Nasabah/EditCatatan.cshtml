@model CoreBPR.Models.NasabahCatatan

<h4>Pemeliharaan Catatan Atas Nasabah</h4>
<hr />

<p>
    <form asp-action="EditCatatan">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="NasabahId" />
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="KategoriCatatanId" class="control-label"></label>
                    <select asp-for="KategoriCatatanId" class="selectpicker form-control" data-live-search="true" asp-items="ViewBag.KategoriCatatanId"></select>
                    <span asp-validation-for="KategoriCatatanId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CatatanSource" class="control-label"></label>
                    <input asp-for="CatatanSource" class="form-control" />
                    <span asp-validation-for="CatatanSource" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CatatanExpiredDate" class="control-label"></label>
                    <input asp-for="CatatanExpiredDate" class="form-control" />
                    <span asp-validation-for="CatatanExpiredDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Catatan" class="control-label"></label>
                    <input asp-for="Catatan" class="form-control" />
                    <span asp-validation-for="Catatan" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <form asp-action="DeleteCatatan" method="post" asp-route-id="@Model.NasabahId">
        <div class="form-group">
            <input type="submit" value="Hapus Catatan" class="btn btn-danger" />
        </div>
    </form>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
